// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "vim.active && textInputFocus"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "alt+l",
        "command": "editor.action.smartSelect.grow",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "vim.active && inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "vim.active && textInputFocus"
    },
    {
        "key": "tab",
        "command": "-extension.vim_tab",
        "when": "vim.active && textInputFocus && !inDebugRepl && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+shift+a",
        "command": "editor.emmet.action.balanceOut"
    },
    {
        "key": "alt+v v",
        "command": "toggleVim"
    },
    {
        "key": "ctrl+up",
        "command": "git.stage",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+down",
        "command": "git.unstage",
        "when": "workbench.scm.active"
    },
    {
        "key": "ctrl+j",
        "command": "-workbench.action.togglePanel"
    },
    {
        "key": "ctrl+shift+q",
        "command": "git.openChanges",
        "when": "editorFocus && !isInDiffEditor"
    },
    {
        "key": "ctrl+shift+q",
        "command": "workbench.action.files.openFile",
        "when": "editorFocus && isInDiffEditor"
    },
    {
        "key": "alt+l",
        "command": "editor.action.smartSelect.expand",
        "when": "vim.active && textInputFocus && !inDebugRepl && vim.mode == 'Visual'"
    },
    {
        "key": "alt+h",
        "command": "editor.action.smartSelect.shrink",
        "when": "vim.active && textInputFocus && !inDebugRepl && vim.mode == 'Visual'"
    },
    {
        "key": "ctrl+space space",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "ctrl+`",
        "command": "-workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },
    {
        "key": "ctrl+o",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+i",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.terminal.new",
        "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
    },
    {
        "key": "ctrl+x",
        "command": "workbench.action.terminal.kill",
        "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
    }
]